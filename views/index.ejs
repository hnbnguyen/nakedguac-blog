<html lang="en">
    
    <%- include('./partials/head.ejs') %> 

    <body>
        <h1>homepage</h1>
        <h2>my photography portfolio is the only thing i care about right now</h2>
        
        <%- include('./partials/nav.ejs') %> 

        <div class="blogs content">
            <h2>all naked blogs</h2>

            <% if (blogs.length > 0) {%>
                <% blogs.forEach(blog => { %>
                    
                    <h3 class="title"><%= blog.title%> </h3>
                    <p class="snippet"><%= blog.snippet %> </p>

                <% }) %>
            <% } else { %>
                <p>There are no blog to display...</p>
            <% } %> 
        </div>
        
        <%- include('./partials/footer.ejs') %> 
    </body>
</html>